{
  "openapi": "3.0.0",
  "info": {
    "title": "Economics",
    "description": "API para cadastrar e documentar histórico de movimentações financeiras, para controle pessoal.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Para teste local."
    }
  ],
  "paths": {
    "/account": {
      "get": {
        "summary": "Listar contas",
        "description": "Lista todas as contas",
        "tags": [
          "Accounts"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Account"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro de acesso ao Banco de Dados."
          }
        }
      }
    },
    "/category": {
      "get": {
        "summary": "Listar categorias das transações",
        "description": "Lista todas as categorias",
        "tags": [
          "Categories"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TransactionCategory"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro de acesso ao Banco de Dados."
          }
        }
      }
    },
    "/transaction/account/{accountId}/month/{month}/year/{year}": {
      "get": {
        "summary": "Listar transações da conta no período informado",
        "description": "Lista todas as transações da conta no período informado",
        "operationId": "getOrderById",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "description": "ID da conta",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "month",
            "in": "path",
            "description": "Mês das transações (número do mês com 0 na frente, caso menor que 10)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "year",
            "in": "path",
            "description": "Ano das transações",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "tags": [
          "Transactions"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Transaction"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro de acesso ao Banco de Dados."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Account": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "total": {
            "type": "number"
          }
        }
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "value": {
            "type": "number"
          },
          "type": {
            "type": "string",
            "enum": [
              "CREDIT",
              "DEBIT"
            ]
          },
          "accountId": {
            "type": "string"
          },
          "subcategoryId": {
            "type": "string"
          },
          "account": {
            "$ref": "#/components/schemas/Account"
          },
          "category": {
            "$ref": "#/components/schemas/TransactionCategory"
          },
          "subcategory": {
            "$ref": "#/components/schemas/TransactionSubcategory"
          }
        }
      },
      "TransactionCategory": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "TransactionSubcategory": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "categoryId": {
            "type": "string"
          }
        }
      }
    }
  }
}